<UserControl x:Class="FinalProject.DirectMessageSenderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinalProject"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Button x:Name="send" Content="Send" HorizontalAlignment="Left" Margin="114,228,0,0" VerticalAlignment="Top" Width="75" Click="send_Click"/>
        <TextBox x:Name="messageContent" HorizontalAlignment="Left" Height="147" Margin="9,75,0,0" TextWrapping="Wrap" Text="Enter Message Here" VerticalAlignment="Top" Width="276"/>
        <Label x:Name="recipientBox" HorizontalAlignment="Left" Height="23" Margin="10,40,0,0" Content="Recipient ID Here" VerticalAlignment="Top" Width="275"/>
        <Label x:Name="userName" Content="" HorizontalAlignment="Left" Margin="13,7,0,0" VerticalAlignment="Top" Width="172"/>
    </Grid>
</UserControl>
